<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- bootstrap css -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />

    <!-- local css -->
    <link rel="stylesheet" href="css/defult.css" />

    <!-- google-fonts -->

    <link
      href="https://fonts.googleapis.com/css2?family=Lobster+Two:ital@1&family=Montserrat:wght@300&family=Roboto+Mono&family=Ubuntu:wght@500&display=swap"
      rel="stylesheet"
    />

    <title>Child Vaccination</title>
  </head>
  <body>
    <!-- navbar -->
    <%- include('./partials/nav2') %>
    <!-------------------------------------------------------------- -->

     <!-- VACCINE  of the child -->

     <div class="profile-top">

      <div>
        <div class="vac-heading ">
        <p>Vaccine List </p>
        </div>
        	<% if(typeof err != 'undefined') { %>
					<div class="alert alert-danger" role="alert"><%= err %></div>
				<% }%>

        <!-- vaccine table -->

        <form action="/vaccine" method="POST" class="margin-point">

          <div class=" row vac-form  center ">

             <div class="padding-one ">
									<select class="list-vac-text" id="vaccine" name="vaccineName">
										<% user.vaxine.forEach(function(data){%>
										<option value="<%=data%>"><%=data%></option>
											<%})%> 
											
									</select>
								</div>
             <div class="col-2">
               <input class="" name="date" type="date" >
             </div>
             <div class="col-2">
               <input type="text" name="doctor" placeholder="Medical Personal Name">
             </div>
             <div class="col-2">
               	<select class="list-vac-text" id="hospital" name="hospitalName">
									<%hospital.forEach(function(data){%>
									<option value="<%=data.HospitalId%>"><%=data.HospitalId%></option>
									<% }) %> 
									
								</select>
             </div>
             <div class="col-2">
              <input type="text" name="PresentPerson" placeholder="Person Present">
             </div>
             <div class="col-2">
              <input type="text" name="mobileNO" placeholder="Mobile No.">
             </div>
             
             
          </div>

        <span class="vac-buttton"><button class="btn btn-lg btn-dark margin-two center dd "type="submit"> Submit</button></span>  

        </form>

     </div>
     
    
     
			
      <!-- upper part -->

     
      
      <!-- lower part / vaccine table -->
      <div class="margin-top-two">
         <div class="vac-heading ">
            <p>Vaccine Done</p>
         </div>
         <div class="margin-top-two">
            
            <table class="table table-text center">
               <thead class="thead-light">
                  <tr>
                     
                     <th scope="col">vaccine Name</th>
                     <th scope="col">Date</th>
                     <th scope="col">Doctor</th>
                     <th scope="col">Hospitalid & Location</th>
                     
                     <th scope="col">Person Present</th>
                     <th scope="col">Mobile No.</th>
                  </tr>
               </thead>
               <tbody>
                 	<% if(typeof done != 'undefined'){%>
							<% done.forEach(function(data){%>
							<tr>
							
							
								<td><%=data.vaccineName%></td>
								<td><%=data.date%></td>
								<td><%=data.doctor%></td>
								<td><%=data.hospitalName%></td>
								<td><%=data.PresentPerson%></td>
								<td><%=data.mobileNO%></td>
									<%})%>
							<%}%>
							</tr>
                
                
               </tbody>
            </table>
            
         </div>
         
      </div>
      
      
      
   </div>
   
</div>
</div>


  </body>
</html>
